<?xml version="1.0"?>
<!-- Sample XML configuration -->
<PiAlarm>
    <AlarmSetups>
        <AlarmSetup>
            <!-- name of the alarm -->
            <name>Work alarm</name>
            <!-- message to show when alarm triggers -->
            <message>Stand up! now.</message>
            <!-- path of the sound file -->
            <sound-path>/</sound-path>
            <!-- Hour when to trigger -->
            <hour>8</hour>
            <!-- Minute when to trigger -->
            <minute>30</minute>
            <!-- Second when to trigger -->
            <second>0</second>
            <!-- Days to alarm -->
            <!-- 1=Mon, 2=Tue, ... 7=Sun -->
            <days>1,2,3,4,5</days> <!-- this would be all workdays -->
        </AlarmSetup>
    </AlarmSetups>
</PiAlarm>
